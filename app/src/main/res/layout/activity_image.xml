    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".custom.image.ImageActivity">

    <Button
        android:id="@+id/btnTestGlideTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试Glide的图片加载Target方式" />

    <Button
        android:id="@+id/btnTestGifMemory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试Gif加载内存占用" />
</LinearLayout>