<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.fireking.library.mpchart.linechart.LineChartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.fireking.library.mpchart.linechart.SimpleLineChart
            android:id="@+id/lineChartView3"
            android:layout_width="match_parent"
            android:layout_height="300dip" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartView"
            android:layout_width="match_parent"
            android:layout_height="300dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartView2"
                android:layout_width="match_parent"
                android:layout_height="300dip" />

            <Button
                android:id="@+id/btnScrollY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩放YAxis" />
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>